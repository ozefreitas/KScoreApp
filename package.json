{
  "name": "kscoreapp",
  "author": "JosÃ© Freitas",
  "description": "App to display scores for SKI-Portugal",
  "version": "0.3.3",
  "icon": "public/karate-score.ico",
  "private": true,
  "homepage": "./",
  "main": "public/main.js",
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.6.7",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "mongoose": "^8.2.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.23.0",
    "react-scripts": "^5.0.1",
    "rsuite": "^5.56.0",
    "util": "^0.12.5",
    "wait-on": "^7.2.0",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "package-win": "npm run build && electron-packager . KScoreApp --overwrite --platform=win32 --arch=ia32 --icon='public/karate-score.ico' --prune=true --out=release-builds",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:serve": "concurrently -k \"cross-env BROWSER=none npm run start\" \"npm run electron:start\"",
    "electron:build": "npm run build && electron-builder",
    "electron:start": "wait-on tcp:3000 && electron ."
  },
  "build": {
    "files": [
      "./public/*",
      "./dist/**/*",
      "./build/**/*",
      ".node_modules/**/*",
      "./package.json",
      "./dist/index.html",
      "./src/*.js"
    ],
    "extraFiles": [
      "./src/*.json",
      "./src/assets/**/*"
    ],
    "extraResources": [
      "./src/assets/**"
    ],
    "extraMetadata": {
      "main": "public/main.js"
    },
    "extends": null,
    "appId": "ksapp",
    "productName": "Karate Score App",
    "buildVersion": "1",
    "icon": "public/karate-score.ico"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@electron-forge/plugin-webpack": "^7.3.1"
  }
}
